{
  "name": "stocks-6-sense-api",
  "version": "1.0.0",
  "description": "API server for the application",
  "main": "index.ts",
  "author": "Ajay Kadus",
  "license": "MIT",
  "scripts": {
    "start": "node 'dist/server.js'",
    "build": "tsc -p . && ncp src/schema dist/schema",
    "start:dev": "NODE_ENV=dev npm run build:dev",
    "build:dev": "nodemon 'src/server.ts' --exec 'ts-node' src/server.ts -e ts,graphql",
    "firebase:serve": "npm run build && firebase emulators:start --only functions",
    "firebase:shell": "npm run build && firebase functions:shell",
    "firebase:start": "npm run shell",
    "firebase:deploy": "firebase deploy --only functions",
    "firebase:logs": "firebase functions:log"
  },
  "dependencies": {
    "apollo-server": "^2.19.2",
    "apollo-server-express": "^2.19.2",
    "cors": "^2.8.5",
    "express": "^4.17.1",
        "firebase-admin": "^9.2.0",
        "firebase-functions": "^3.11.0",
        "graphql": "^15.5.0",
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/graphql": "^14.5.0",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.22",
    "graphql-import-node": "^0.0.4",
    "firebase-functions-test": "^0.2.0",
    "graphql-tools": "^7.0.2",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}